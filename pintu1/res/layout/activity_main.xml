<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

 <TextView
  android:id="@+id/text_time"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="center_horizontal"
  android:textSize="28sp"
  android:textStyle="bold"
  android:textColor="#C00"
  android:text="耗时:0秒" />
 <LinearLayout
  android:id="@+id/liner_first"
  android:layout_height="wrap_content"
  android:layout_width="wrap_content"
  android:orientation="horizontal"
  android:layout_gravity="center">
  <ImageButton 
   android:id="@+id/btn_01"
   android:layout_height="90dp"
   android:layout_width="90dp"
   android:onClick="onClick"
   android:background="@drawable/one"
   android:padding="0dp"
   android:scaleType="centerInside"	
   />   
  <ImageButton 
   android:id="@+id/btn_02"
   android:layout_height="90dp"
   android:layout_width="90dp"
   android:onClick="onClick"
   android:src="@drawable/two"
   android:padding="0dp"
   android:scaleType="centerInside"	
   />
  <ImageButton 
   android:id="@+id/btn_03"
   android:layout_height="90dp"
   android:layout_width="90dp"
   android:onClick="onClick"
   android:src="@drawable/three"
   android:padding="0dp"
   android:scaleType="centerInside"	
   />
 </LinearLayout>
 <LinearLayout
  android:id="@+id/liner_second"
  android:layout_height="wrap_content"
  android:layout_width="wrap_content"
  android:orientation="horizontal"
  android:layout_gravity="center">
  <ImageButton 
   android:id="@+id/btn_04"
   android:layout_height="90dp"
   android:layout_width="90dp"
   android:onClick="onClick"
   android:src="@drawable/four"
   android:padding="0dp" 
   android:scaleType="centerInside"
   />
   	
  <ImageButton 
   android:id="@+id/btn_05"
   android:layout_height="90dp"
   android:layout_width="90dp"
   android:onClick="onClick"
   android:src="@drawable/five"
   android:padding="0dp"
   android:scaleType="centerInside" />
  <ImageButton 
   android:id="@+id/btn_06"
   android:layout_height="90dp"
   android:layout_width="90dp"
   android:onClick="onClick"
   android:src="@drawable/six"
   android:padding="0dp" 
   android:scaleType="centerInside"/>
 </LinearLayout>
 <LinearLayout
  android:id="@+id/liner_third"
  android:layout_height="wrap_content"
  android:layout_width="wrap_content"
  android:orientation="horizontal"
  android:layout_gravity="center">
  <ImageButton 
   android:id="@+id/btn_07"
   android:layout_height="90dp"
   android:layout_width="90dp"
   android:onClick="onClick"
   android:src="@drawable/seven"
   android:padding="0dp"
   android:scaleType="centerInside" />
  <ImageButton 
   android:id="@+id/btn_08"
   android:layout_height="90dp"
   android:layout_width="90dp"
   android:onClick="onClick"
   android:src="@drawable/eight"
   android:padding="0dp"
   android:scaleType="centerInside" />
  <ImageButton 
   android:id="@+id/btn_09"
   android:layout_height="90dp"
   android:layout_width="90dp"
   android:onClick="onClick"
   android:src="@drawable/nine"
   android:padding="0dp"
   android:scaleType="centerInside" 
   android:visibility="invisible" />
 </LinearLayout>
 <Button
  android:id="@+id/btn_restart"
  android:layout_height="wrap_content"
  android:layout_width="wrap_content"
  android:onClick="restart"
  android:layout_gravity="center"
  android:text="重新开始" />
 <ImageView
  android:id="@+id/iv_yuantu"
  android:layout_gravity="center_horizontal"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:src="@drawable/r" />
</LinearLayout>